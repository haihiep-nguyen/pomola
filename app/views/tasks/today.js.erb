let todayList = $("#today-tasks");
if(todayList.hasClass('d-none') === true){
    todayList.removeClass('d-none');
    todayList.closest('#pomo-page').removeClass('list-in-2');
    todayList.closest('#pomo-page').addClass('list-in-3');
}else{
    todayList.addClass('d-none');
    todayList.closest('#pomo-page').removeClass('list-in-3');
    todayList.closest('#pomo-page').addClass('list-in-2');
}