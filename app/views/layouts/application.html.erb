<!DOCTYPE html>
<html>
  <head>
    <title>PomoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<!--    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">-->
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless current_user.present? %>
      <div class="container-fluid">
        <div class="notice alert-success <%= notice.present? ? 'p-2' : 'p-0 border-0' %>" role="alert"><%= notice %></div>
        <div class="alert alert-danger <%= alert.present? ? 'p-2' : 'p-0 border-0' %> m-0" role="alert"><%= alert %></div>
      </div>
      <%= render partial: 'devise/menu/login_items' %>
    <% end %>
    <%= yield %>
  </body>
</html>
