<div class="user-box d-flex align-items-center flex-column">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  required: true,
                  input_html: {class: 'user-input', placeholder: "Email", autofocus: true} %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: false,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: {placeholder: "Password", class: 'user-input', autocomplete: "new-password"} %>
      <%= f.input :password_confirmation,
                  label: false,
                  required: false,
                  input_html: {class: 'user-input', placeholder: "Confirm password", autocomplete: "new-password"}%>
      <%= f.input :current_password,
                  label: false,
                  hint: "we need your current password to confirm your changes",
                  input_html: {placeholder: "Current password", class: 'user-input', autocomplete: "current-password"},
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn-submit btn btn-primary border-0' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>