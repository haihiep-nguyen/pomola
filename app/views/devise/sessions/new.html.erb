<div class="user-box d-flex align-items-center flex-column">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'user-form'}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {class: 'user-input', placeholder: "Email", autocomplete: "email"} %>
      <%= f.input :password,
                  label: false,
                  required: true,
                  input_html: {class: 'user-input', placeholder: "Password", autocomplete: "current-password"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn-submit btn btn-primary border-0' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>