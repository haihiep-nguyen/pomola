<div class="user-box d-flex align-items-center flex-column">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  required: true,
                  input_html: {class: 'user-input', placeholder: "Email", autocomplete: "email"},
                  autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: 'btn-submit btn btn-primary border-0' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>