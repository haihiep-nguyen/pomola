<div class="user-box d-flex align-items-center flex-column">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: false,
                  input_html: {class: 'user-input', placeholder: "Password", autocomplete: "new-password"},
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation,
                  label: false,
                  input_html: {class: 'user-input', placeholder: "Confirm your new password", autocomplete: "new-password"},
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'btn-submit btn btn-primary border-0' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>